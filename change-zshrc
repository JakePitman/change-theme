#!/usr/bin/env node
var fs = require('fs')

const args = process.argv.slice(2)
//TODO: use real path instead
//~/.zshrc
const zshrcPath = "../.zshrc"

//SOURCE OF TRUTH FOR ACCEPTABLE ARGS & POWERLINE THEME NAMES
const argToZshColor = {
  "azure": "MIDNIGHT_SUN",
  "gr33n": "GR33N"
}

const acceptableArgNames = Object.keys(argToZshColor)

const printUsage = () => {
  console.log("USAGE:") 
  console.log("  change-zshrc <THEME_NAME>")
  console.log("    Acceptable theme names:")
  acceptableArgNames.forEach(name => {
    console.log(`      ${name}`)
  })
}

if(! acceptableArgNames.includes(args[0])) {
  printUsage()
  return
} else {
  powerlineThemeFromArgs = args[0]
}

fs.readFile(zshrcPath, 'utf8', (err,data) => {
  if (err) {
    return console.log(err);
  }

  const result = data.replace(
    /read -r MAIN_COLOR UNTRACKED_COLOR <<<\$\(echo \$.*_COLORS\)/g,
    `read -r MAIN_COLOR UNTRACKED_COLOR <<<$(echo $${argToZshColor[powerlineThemeFromArgs]}_COLORS)`
  );

  fs.writeFile(zshrcPath, result, 'utf8', (err) => {
     if (err) return console.log(err);
  });
});

